[core]
  quotepath = false
[user]
	email = linxray@gmail.com
	name = Ray
[push]
	default           = simple
  recurseSubmodules = on-demand
[color]
	ui = auto

[pretty]
  tree = %C(auto) %h %d %C(blue) %s %C(reset)BY %cn [%cr]

[alias]
  lg   = log --color --pretty=tree --graph
  lgf  = lg  --name-only --summary --author
  st   = status
  ci   = commit -m
  camd = commit --amend
  co   = checkout
  pr   = pull --rebase
  # 8 hrs
  cc   = config credential.helper 'cache --timeout=28800'
  au   = add -u
  aa   = add -A
  df   = diff
  pu   = push
  br   = branch
  mg   = merge
  sh   = stash


